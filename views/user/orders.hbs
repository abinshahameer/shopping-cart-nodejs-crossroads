<section>
    <div class="container">
        <table class="table mt-5">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Address</th>
                    <th>Pincode</th>
                    <th>Amount</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                {{#each orders}}
                <tr>
                    <td>{{this.date}}</td>
                    <td>
                        {{this.deliveryDetails.address}}
                    </td>
                     <td>
                        {{this.deliveryDetails.pincode}}
                    </td>
                     <td>
                        {{this.deliveryDetails.mobile}}
                    </td>
                     <td>
                        {{this.totalAmount}}
                    </td>
                    <td>
                        {{this.status}}
                    </td>
                    <td>
                        <a href="/view-order-products/{{this._id}}" class="btn btn-primary">View products</a>
                    </td>
                </tr>
                {{/each}}
            </tbody>

        </table>
    </div>
</section>